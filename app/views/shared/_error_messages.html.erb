<!-- Partial for displaying form submission error messages -->
<% if @user.errors.any? %>
  <div class="error_explanation">
    <div class="alert alert-danger">
      This form contains <%= pluralize(@user.errors.count, 'error') %>.
    </div>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
