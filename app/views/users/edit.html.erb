<!-- Form to edit existing user. Rails checks @user.new_record? to determine 
whether to use POST or PATCH. -->

<% provide(:title, 'Edit user') %>

<div class="row d-flex justify-content-center">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user) do |f| %>
      <h1>Update your profile</h1>
      <%= render 'shared/error_messages' %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, 'Confirmation' %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit 'Save changes', class: 'btn btn-primary mt-3' %>
    <% end %>

    <div class="gravatar__edit">
      <%= gravatar_for @user %>
      <!-- rel="noopener" prevents phishing when target="_blank" -->
      <a href="https://gravatar.com/emails" rel="noopener" target="_blank">
        change
      </a>
    </div>
  </div>
</div>
