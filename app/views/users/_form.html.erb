<!-- 
Partial for use in user forms 

@param :form_header [String] header for form
@param :submit_btn_text [String] text to display on submit button
-->

<%= form_with(model: @user) do |f| %>
  <h1><%= yield(:form_header) %></h1>
  <%= render 'shared/error_messages' %>
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.label :password_confirmation, 'Confirmation' %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>

  <%= f.submit yield(:submit_btn_text), class: 'btn btn-primary mt-3' %>
<% end %>
